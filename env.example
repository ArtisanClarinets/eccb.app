# ==============================================================================
# ECCB Platform - Environment Variables Example
# Copy this file to .env and replace the placeholder values with your own.
# ==============================================================================

# ------------------------------------------------------------------------------
# APP & ENVIRONMENT
# ------------------------------------------------------------------------------
# [Required: No] env mode
NODE_ENV="development"
# [Required: No] server port
PORT="3015"
# [Required: No] client-visible
NEXT_PUBLIC_APP_URL="http://localhost:3015"
# [Required: No] client-visible
NEXT_PUBLIC_APP_NAME="Emerald Coast Community Band"
# [Required: No] optional
APP_VERSION="1.0.0"

# ------------------------------------------------------------------------------
# DATABASE & CACHE
# ------------------------------------------------------------------------------
# [Required: Yes] Prisma DB
DATABASE_URL="postgres://postgres:pass@localhost:5432/eccb_dev"
# [Required: No] default fallback
REDIS_URL="redis://localhost:6379"

# ------------------------------------------------------------------------------
# AUTHENTICATION
# ------------------------------------------------------------------------------
# [Required: Yes] must be ≥32 chars
AUTH_SECRET="GENERATE_32+_CHAR_SECRET"
# [Required: Yes] must be ≥32 chars
BETTER_AUTH_SECRET="GENERATE_32+_CHAR_SECRET"
# [Required: No] server auth URL
AUTH_URL="http://localhost:3015"
# [Required: No] better-auth URL
BETTER_AUTH_URL="http://localhost:3015"

# ------------------------------------------------------------------------------
# SUPER ADMIN (Seeding)
# ------------------------------------------------------------------------------
# [Required: No (but required for seeding)] used by seeder
SUPER_ADMIN_EMAIL="admin@eccb.org"
# [Required: Required for seeding] do NOT commit real password
SUPER_ADMIN_PASSWORD="eccb_admin_2026!"
# [Required: No] dev fallback only
SUPER_ADMIN_DEFAULT_PASSWORD="eccb_admin_2026!"
# [Required: No] (used in a few places)
ADMIN_EMAIL="admin@eccb.app"

# ------------------------------------------------------------------------------
# OAUTH (Google)
# ------------------------------------------------------------------------------
# [Required: No] OAuth (optional)
GOOGLE_CLIENT_ID=""
# [Required: No] OAuth secret
GOOGLE_CLIENT_SECRET=""
# [Required: No] client visibility flag
NEXT_PUBLIC_GOOGLE_AUTH_ENABLED="false"

# ------------------------------------------------------------------------------
# STORAGE (Local or S3)
# ------------------------------------------------------------------------------
# [Required: No] LOCAL or S3
STORAGE_DRIVER="LOCAL"
# [Required: No] local uploads path
LOCAL_STORAGE_PATH="./storage"
# [Required: No] bytes (50MB)
MAX_FILE_SIZE="52428800"

# S3 Configuration (Required if STORAGE_DRIVER=S3)
# [Required: Yes if S3] MinIO / S3 endpoint
S3_ENDPOINT="http://minio:9000"
# [Required: Yes if S3] bucket/container
S3_BUCKET_NAME="eccb-storage"
# [Required: Yes if S3] region
S3_REGION="us-east-1"
# [Required: Yes if S3] secret
S3_ACCESS_KEY_ID="minioadmin"
# [Required: Yes if S3] secret
S3_SECRET_ACCESS_KEY="minioadmin"
# [Required: No] helpful for MinIO
S3_FORCE_PATH_STYLE="true"

# ------------------------------------------------------------------------------
# EMAIL (SMTP)
# ------------------------------------------------------------------------------
# [Required: No] LOG, SMTP, or NONE
EMAIL_DRIVER="LOG"
# [Required: Yes if SMTP] SMTP host
SMTP_HOST="smtp.mailtrap.io"
# [Required: Yes if SMTP] SMTP port
SMTP_PORT="587"
# [Required: Yes if SMTP auth used] SMTP user
SMTP_USER=""
# [Required: Yes if SMTP auth used] SMTP pass
SMTP_PASSWORD=""
# [Required: No] true/false
SMTP_SECURE="false"
# [Required: No] From address
SMTP_FROM="noreply@eccb.app"

# ------------------------------------------------------------------------------
# PUSH NOTIFICATIONS
# ------------------------------------------------------------------------------
# [Required: No] push notifications
VAPID_PUBLIC_KEY=""
# [Required: No] push notifications
VAPID_PRIVATE_KEY=""

# ------------------------------------------------------------------------------
# VIRUS SCANNING (ClamAV)
# ------------------------------------------------------------------------------
# [Required: No] ClamAV toggle
ENABLE_VIRUS_SCAN="false"
# [Required: No] virus scan host
CLAMAV_HOST="localhost"
# [Required: No] virus scan port
CLAMAV_PORT="3310"

# ------------------------------------------------------------------------------
# LOGGING
# ------------------------------------------------------------------------------
# [Required: No] file logs
LOG_DIR="./logs"
# [Required: No] retention
LOG_RETENTION_DAYS="7"
# [Required: No] rotation size
LOG_MAX_SIZE_MB="100"
# [Required: No] rotation mode
LOG_ROTATION="daily"

# ------------------------------------------------------------------------------
# WORKERS & PROCESS MANAGEMENT
# ------------------------------------------------------------------------------
# [Required: No] worker health
WORKER_HEALTH_PORT="3001"
# [Required: No] pm health
PROCESS_MANAGER_HEALTH_PORT="3002"
# [Required: No] boolean
RESTART_CRASHED_PROCESSES="false"
# [Required: No] scheduler tick
SCHEDULER_INTERVAL_MS="60000"
# [Required: No] daily cleanup
CLEANUP_INTERVAL_MS="86400000"
# [Required: No] boolean
ENABLE_WORKER="true"