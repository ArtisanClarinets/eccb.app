# ==============================================================================
# ECCB Platform - Environment Variables Example
# Copy this file to .env and replace the placeholder values with your own.
# ==============================================================================

# ------------------------------------------------------------------------------
# APP & ENVIRONMENT
# ------------------------------------------------------------------------------
# [Required: No] Environment mode: development, production, or test
NODE_ENV="development"
# [Required: No] Server port
PORT="3015"
# [Required: Yes] Public-facing application URL (including protocol)
APP_URL="http://localhost:3015"
# [Required: No] Client-visible app name
NEXT_PUBLIC_APP_NAME="Emerald Coast Community Band"
# [Required: No] Optional
APP_VERSION="1.0.0"

# ------------------------------------------------------------------------------
# DATABASE & CACHE
# ------------------------------------------------------------------------------
# [Required: Yes] Database connection string (mysql:// for MariaDB, postgres:// for PostgreSQL)
# Format: mysql://user:password@host:port/database_name
# Example: mysql://eccb_user:secure_password@localhost:3306/eccb_dev
DATABASE_URL="mysql://eccb_user:secure_password@localhost:3306/eccb_dev"

# Alternative Database Configuration (use instead of DATABASE_URL)
# [Required: Yes if not using DATABASE_URL] Database host
DATABASE_HOST="localhost"
# [Required: Yes if not using DATABASE_URL] Database port (default: 3306 for MariaDB/MySQL)
DATABASE_PORT="3306"
# [Required: Yes if not using DATABASE_URL] Database username
DATABASE_USER="eccb_app_user"
# [Required: Yes if not using DATABASE_URL] Database password
DATABASE_PASSWORD="Bhg75jfmc!"
# [Required: Yes if not using DATABASE_URL] Database name
DATABASE_NAME="eccb_dev"

# [Required: No] Redis connection URL for caching and sessions
# Format: redis://[password@]host[:port][/database]
REDIS_URL="redis://localhost:6379"

# ------------------------------------------------------------------------------
# AUTHENTICATION
# ------------------------------------------------------------------------------
# [Required: Yes] Authentication secret (minimum 32 characters)
# Use: openssl rand -base64 32
AUTH_SECRET="GENERATE_32+_CHAR_SECRET"
# [Required: Yes] Alternative auth secret (minimum 32 characters)
BETTER_AUTH_SECRET="GENERATE_32+_CHAR_SECRET"
# [Required: No] Server authentication URL (used for auth callbacks)
AUTH_URL="http://localhost:3015"
# [Required: No] Better Auth URL
BETTER_AUTH_URL="http://localhost:3015"

# ------------------------------------------------------------------------------
# SUPER ADMIN (Seeding)
# ------------------------------------------------------------------------------
# [Required: No (but required for initial seeding)] Super admin email address
SUPER_ADMIN_EMAIL="admin@eccb.org"
# [Required: Yes for initial seeding] Super admin password - do NOT commit real password
SUPER_ADMIN_PASSWORD="eccb_admin_2026!"
# [Required: No] Default fallback password for development
SUPER_ADMIN_DEFAULT_PASSWORD="eccb_admin_2026!"
# [Required: No] Primary administrator email (used in various notifications)
ADMIN_EMAIL="admin@eccb.app"

# ------------------------------------------------------------------------------
# OAUTH (Google)
# ------------------------------------------------------------------------------
# [Required: No] Google OAuth client ID
GOOGLE_CLIENT_ID=""
# [Required: No] Google OAuth client secret
GOOGLE_CLIENT_SECRET=""
# [Required: No] Enable Google authentication (true/false)
NEXT_PUBLIC_GOOGLE_AUTH_ENABLED="false"

# ------------------------------------------------------------------------------
# STORAGE (Local or S3)
# ------------------------------------------------------------------------------
# [Required: No] Storage driver: LOCAL or S3
STORAGE_DRIVER="LOCAL"
# [Required: No] Local storage path for uploads
LOCAL_STORAGE_PATH="./storage"
# [Required: No] Maximum file size in bytes (default: 50MB)
MAX_FILE_SIZE="52428800"

# S3 Configuration (Required if STORAGE_DRIVER=S3)
# [Required: Yes if S3] MinIO / S3 endpoint URL
S3_ENDPOINT="http://minio:9000"
# [Required: Yes if S3] S3 bucket name
S3_BUCKET_NAME="eccb-storage"
# [Required: Yes if S3] AWS/S3 region
S3_REGION="us-east-1"
# [Required: Yes if S3] S3 access key ID
S3_ACCESS_KEY_ID="minioadmin"
# [Required: Yes if S3] S3 secret access key
S3_SECRET_ACCESS_KEY="minioadmin"
# [Required: No] Force path-style addressing (true for MinIO, false for AWS S3)
S3_FORCE_PATH_STYLE="true"

# ------------------------------------------------------------------------------
# EMAIL
# ------------------------------------------------------------------------------
# [Required: No] Email provider: smtp, sendgrid, resend, or log
# Options: smtp, sendgrid, resend, log, none
EMAIL_PROVIDER="log"

# SMTP Configuration (Required if EMAIL_PROVIDER=smtp)
# [Required: Yes if SMTP] SMTP server hostname
SMTP_HOST="smtp.mailtrap.io"
# [Required: Yes if SMTP] SMTP server port (typically 587 for TLS, 465 for SSL)
SMTP_PORT="587"
# [Required: Yes if SMTP authentication is used] SMTP username
SMTP_USER=""
# [Required: Yes if SMTP authentication is used] SMTP password
SMTP_PASSWORD=""
# [Required: No] Use SSL/TLS (true for port 465, false for port 587)
SMTP_SECURE="false"
# [Required: No] Default "From" address for emails
SMTP_FROM="noreply@eccb.app"

# SendGrid Configuration (Required if EMAIL_PROVIDER=sendgrid)
# [Required: Yes if SendGrid] SendGrid API key
# SENDGRID_API_KEY=""

# Resend Configuration (Required if EMAIL_PROVIDER=resend)
# [Required: Yes if Resend] Resend API key
# RESEND_API_KEY=""

# ------------------------------------------------------------------------------
# PUSH NOTIFICATIONS
# ------------------------------------------------------------------------------
# [Required: No] VAPID public key for push notifications
VAPID_PUBLIC_KEY=""
# [Required: No] VAPID private key for push notifications
VAPID_PRIVATE_KEY=""

# ------------------------------------------------------------------------------
# VIRUS SCANNING (ClamAV)
# ------------------------------------------------------------------------------
# [Required: No] Enable ClamAV virus scanning (true/false)
ENABLE_VIRUS_SCAN="false"
# [Required: No] ClamAV daemon host
CLAMAV_HOST="localhost"
# [Required: No] ClamAV daemon port
CLAMAV_PORT="3310"

# ------------------------------------------------------------------------------
# LOGGING
# ------------------------------------------------------------------------------
# [Required: No] Directory for log files
LOG_DIR="./logs"
# [Required: No] Log retention period in days
LOG_RETENTION_DAYS="7"
# [Required: No] Maximum log file size in MB before rotation
LOG_MAX_SIZE_MB="100"
# [Required: No] Log rotation mode: daily, hourly, or size
LOG_ROTATION="daily"

# ------------------------------------------------------------------------------
# WORKERS & PROCESS MANAGEMENT
# ------------------------------------------------------------------------------
# [Required: No] Worker health check port
WORKER_HEALTH_PORT="3001"
# [Required: No] Process manager health check port
PROCESS_MANAGER_HEALTH_PORT="3002"
# [Required: No] Automatically restart crashed processes (true/false)
RESTART_CRASHED_PROCESSES="false"
# [Required: No] Scheduler interval in milliseconds (default: 1 minute)
SCHEDULER_INTERVAL_MS="60000"
# [Required: No] Cleanup interval in milliseconds (default: 24 hours)
CLEANUP_INTERVAL_MS="86400000"
# [Required: No] Enable background worker (true/false)
ENABLE_WORKER="true"